<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.topspeedsnail.loginregister.RegisterActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/NewEmailEditText"
        android:hint="输入邮箱"
        android:layout_below="@+id/NewNameEditText"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/NewNameEditText"
        android:layout_alignParentTop="true"
        android:hint="输入姓名"
        android:layout_alignLeft="@+id/NewEmailEditText"
        android:layout_alignStart="@+id/NewEmailEditText"
        android:layout_alignRight="@+id/NewEmailEditText"
        android:layout_alignEnd="@+id/NewEmailEditText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/NewPasswordEditText"
        android:hint="输入密码"
        android:layout_below="@+id/NewEmailEditText"
        android:layout_alignLeft="@+id/NewEmailEditText"
        android:layout_alignStart="@+id/NewEmailEditText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        android:id="@+id/NewRegisterButton"
        android:layout_below="@+id/NewPasswordEditText"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
